<div class="container">
    <div class="countdown-header">
        <h2>è·é›¢ 2026 æœƒè€ƒåƒ…å‰©</h2>
        <div id="timer">è¨ˆç®—ä¸­...</div>
        <div class="quote">å …æŒåˆ°åº•ï¼Œæ°¸ä¸æ”¾æ£„ï¼</div>
    </div>


    <div class="planner-section">
        <div class="section-title">ğŸ“… ä»Šæ—¥è®€æ›¸è¨ˆç•«</div>
        
        <div class="input-group">
            <input type="text" id="taskInput" placeholder="ä¾‹å¦‚ï¼šå®Œæˆæ•¸å­¸ 3-1 ç¿’ä½œ..." onkeypress="handleKeyPress(event)">
            <button id="addBtn" onclick="addTask()">æ–°å¢</button>
        </div>


        <ul id="taskList">
            </ul>
    </div>
</div>




<script>
    // --- JavaScript é‚è¼¯æ§åˆ¶å€ ---


    // 1. å€’æ•¸è¨ˆæ™‚å™¨åŠŸèƒ½
    // è¨­å®šç›®æ¨™æ—¥æœŸï¼š2026å¹´5æœˆ16æ—¥ 00:00:00
    const targetDate = new Date("May 16, 2026 00:00:00").getTime();


    // æ¯ç§’æ›´æ–°ä¸€æ¬¡çš„å‡½æ•¸
    const countdownTimer = setInterval(function() {
        const now = new Date().getTime();
        const distance = targetDate - now;


        // è¨ˆç®—å¤©ã€æ™‚ã€åˆ†ã€ç§’
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);


        // è£œé›¶å‡½æ•¸ (ä¾‹å¦‚è®“ 5 è®Šæˆ 05)
        const pad = (num) => num.toString().padStart(2, '0');


        // é¡¯ç¤ºåœ¨ç¶²é ä¸Š
        document.getElementById("timer").innerHTML = 
            `${days}å¤© ${pad(hours)}æ™‚ ${pad(minutes)}åˆ† ${pad(seconds)}ç§’`;


        // å¦‚æœæ™‚é–“åˆ°äº†
        if (distance < 0) {
            clearInterval(countdownTimer);
            document.getElementById("timer").innerHTML = "æœƒè€ƒå·²çµæŸï¼";
        }
    }, 1000);




    // 2. è®€æ›¸è¨ˆç•«è¡¨åŠŸèƒ½ (å«æœ¬åœ°å„²å­˜)


    // å¾ç€è¦½å™¨è¨˜æ†¶é«”è®€å–ä»»å‹™ï¼Œå¦‚æœæ²’æœ‰å°±å»ºç«‹é è¨­ä»»å‹™
    let tasks = JSON.parse(localStorage.getItem('studyTasks')) || [
        { text: "æ­¡è¿ä½¿ç”¨ï¼è©¦è‘—æ–°å¢ä¸€å€‹ä»»å‹™", completed: false },
        { text: "é»æ“Šå·¦å´æ–¹å¡Šæ¨™è¨˜å®Œæˆ", completed: true },
    ];


    const taskListElement = document.getElementById('taskList');
    const taskInput = document.getElementById('taskInput');


    // æ¸²æŸ“(ç¹ªè£½)ä»»å‹™åˆ—è¡¨åˆ°ç•«é¢ä¸Š
    function renderTasks() {
        taskListElement.innerHTML = ''; // æ¸…ç©ºç›®å‰çš„åˆ—è¡¨
        tasks.forEach((task, index) => {
            const li = document.createElement('li');
            li.className = `task-item ${task.completed ? 'completed' : ''}`;
            li.innerHTML = `
                <div class="task-content" onclick="toggleTask(${index})">
                    <div class="custom-checkbox"></div>
                    <span class="task-text">${task.text}</span>
                </div>
                <button class="delete-btn" onclick="deleteTask(${index}, event)">âœ•</button>
            `;
            taskListElement.appendChild(li);
        });
        // æ¯æ¬¡ç•«é¢æ›´æ–°å¾Œï¼Œé †ä¾¿å„²å­˜åˆ°æœ¬åœ°è¨˜æ†¶é«”
        saveToLocalStorage();
    }


    // æ–°å¢ä»»å‹™
    function addTask() {
        const text = taskInput.value.trim();
        if (text !== "") {
            tasks.unshift({ text: text, completed: false }); // åŠ åˆ°æœ€å‰é¢
            taskInput.value = ''; // æ¸…ç©ºè¼¸å…¥æ¡†
            renderTasks();
        }
    }


    // åˆ‡æ›ä»»å‹™å®Œæˆç‹€æ…‹
    function toggleTask(index) {
        tasks[index].completed = !tasks[index].completed;
        renderTasks();
    }


    // åˆªé™¤ä»»å‹™
    function deleteTask(index, event) {
        event.stopPropagation(); // é˜²æ­¢è§¸ç™¼ toggleTask
        // è·³å‡ºç¢ºèªè¦–çª—
        if(confirm("ç¢ºå®šè¦åˆªé™¤é€™å€‹ä»»å‹™å—ï¼Ÿ")) {
            tasks.splice(index, 1);
            renderTasks();
        }
    }


    // å„²å­˜åˆ°ç€è¦½å™¨ LocalStorage
    function saveToLocalStorage() {
        localStorage.setItem('studyTasks', JSON.stringify(tasks));
    }


    // è®“è¼¸å…¥æ¡†æ”¯æ´æŒ‰ Enter éµé€å‡º
    function handleKeyPress(event) {
        if (event.key === 'Enter') {
            addTask();
        }
    }


    // ç¶²é è¼‰å…¥æ™‚ï¼Œå…ˆç¹ªè£½ä¸€æ¬¡åˆ—è¡¨
    renderTasks();


</script>


